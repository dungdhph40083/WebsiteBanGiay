@model Application.Data.Models.User

@{
    ViewData["Title"] = "Profile Management";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">My Profile</h1>

    <div class="card shadow-sm p-4 position-relative">

        <div style="position: absolute; top: 20px; right: 20px;">
            @if (Model.Image != null)
            {
                <img src="https://localhost:7187/Images/@Model.Image.ImageFileName"
                     alt="User Avatar"
                     class="rounded-circle"
                     style="width: 100px; height: 100px; object-fit: cover; border: 2px solid #ddd;">
            }
            else
            {
                <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center"
                     style="width: 100px; height: 100px;">
                    <span class="text-white">N/A</span>
                </div>
            }
            <h6 class="text-right mt-3 mr-3 font-weight-bold">My Avatar</h6>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <label class="font-weight-bold">Username:</label>
            </div>
            <div class="col-md-8">
                <p>@Model.Username</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <label class="font-weight-bold">Full Name:</label>
            </div>
            <div class="col-md-8">
                <p>@(Model.FirstName + " " + Model.LastName)</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <label class="font-weight-bold">Email:</label>
            </div>
            <div class="col-md-8">
                <p>@Model.Email</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <label class="font-weight-bold">Phone Number:</label>
            </div>
            <div class="col-md-8">
                <p>@Model.PhoneNumber</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <label class="font-weight-bold">Address:</label>
            </div>
            <div class="col-md-8">
                <p>@Model.Address</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <label class="font-weight-bold">Status:</label>
            </div>
            <div class="col-md-8">
                <p>@(Model.Status == 1 ? "Active" : "Inactive")</p>
            </div>
        </div>

        <div class="text-center mt-4">
            <a asp-action="Edit" class="btn btn-primary">Edit Profile</a>
        </div>
    </div>
</div>
