@model List<Application.Data.Models.Order>
@{
    ViewData["Title"] = "Checkout";
    var user = ViewBag.DefaultUser as Application.Data.Models.User;
    var cartItems = ViewBag.CartItems as Application.Data.Models.ShoppingCart;
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Home</a>
                <span class="breadcrumb-item active">Checkout</span>
            </nav>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <h5 class="section-title position-relative text-uppercase mb-3">
                <span class="bg-secondary pr-3">Địa chỉ mặc định</span>
            </h5>
            <div class="bg-light p-30 mb-5">
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label>Tên</label>
                        <input class="form-control" type="text" value="@user?.FirstName" readonly>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Họ</label>
                        <input class="form-control" type="text" value="@user?.LastName" readonly>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>E-mail</label>
                        <input class="form-control" type="email" value="@user?.Email" readonly>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Số điện thoại</label>
                        <input class="form-control" type="text" value="@user?.PhoneNumber" readonly>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Address Line 1</label>
                        <input class="form-control" type="text" placeholder="123 Street">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Address Line 2</label>
                        <input class="form-control" type="text" placeholder="123 Street">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Country</label>
                        <select class="custom-select">
                            <option selected>United States</option>
                            <option>Afghanistan</option>
                            <option>Albania</option>
                            <option>Algeria</option>
                        </select>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>City</label>
                        <input class="form-control" type="text" placeholder="New York">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>State</label>
                        <input class="form-control" type="text" placeholder="New York">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>ZIP Code</label>
                        <input class="form-control" type="text" placeholder="123">
                    </div>
                    <div class="col-md-12 form-group">
                        <label>Địa chỉ</label>
                        <input class="form-control" type="text" value="@user?.Address" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="use-different-address">
                        <label class="custom-control-label" for="use-different-address">
                            Sử dụng địa chỉ khác
                        </label>
                    </div>
                </div>
            </div>

            <div class="collapse mb-5" id="shipping-address">
                <h5 class="section-title position-relative text-uppercase mb-3">
                    <span class="bg-secondary pr-3">Địa chỉ khác</span>
                </h5>
                <div class="bg-light p-30">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Tên</label>
                            <input class="form-control" type="text" placeholder="Tên khác">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Họ</label>
                            <input class="form-control" type="text" placeholder="Họ khác">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>E-mail</label>
                            <input class="form-control" type="email" placeholder="Email khác">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Số điện thoại</label>
                            <input class="form-control" type="text" placeholder="SĐT khác">
                        </div>
                        <div class="col-md-12 form-group">
                            <label>Địa chỉ</label>
                            <input class="form-control" type="text" placeholder="Địa chỉ khác">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tổng đơn hàng và thanh toán -->
        <div class="col-lg-4">
            <h5 class="section-title position-relative text-uppercase mb-3">
                <span class="bg-secondary pr-3">Tổng đơn hàng</span>
            </h5>
            <div class="bg-light p-30 mb-5">
                <div class="border-bottom">
                    <h6 class="mb-3">Các sản phẩm</h6>
                    <div class="d-flex justify-content-between">
                        <p>Sản phẩm 1</p>
                        <p>$150</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p>Sản phẩm 2</p>
                        <p>$150</p>
                    </div>
                </div>
                <div class="border-bottom pt-3 pb-2">
                    <div class="d-flex justify-content-between mb-3">
                        <h6>Tổng cộng</h6>
                        <h6>$300</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Phí vận chuyển</h6>
                        <h6 class="font-weight-medium">$10</h6>
                    </div>
                </div>
                <div class="pt-2">
                    <div class="d-flex justify-content-between mt-2">
                        <h5>Thành tiền</h5>
                        <h5>$310</h5>
                    </div>
                </div>
            </div>

            <div class="mb-5">
                <h5 class="section-title position-relative text-uppercase mb-3">
                    <span class="bg-secondary pr-3">Phương thức thanh toán</span>
                </h5>
                <div class="bg-light p-30">
                    <div class="form-group">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" name="payment" id="cashondelivery">
                            <label class="custom-control-label" for="cashondelivery">Thanh toán khi nhận hàng</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" name="payment" id="vnpay">
                            <label class="custom-control-label" for="vnpay">Thanh toán VNPay</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" name="payment" id="momo">
                            <label class="custom-control-label" for="momo">Thanh toán MoMo</label>
                        </div>
                    </div>
                    <button class="btn btn-block btn-primary font-weight-bold py-3">Đặt hàng</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('use-different-address').addEventListener('change', function () {
        var collapse = document.getElementById('shipping-address');
        if (this.checked) {
            collapse.classList.add('show');
        } else {
            collapse.classList.remove('show');
        }
    });
</script>
