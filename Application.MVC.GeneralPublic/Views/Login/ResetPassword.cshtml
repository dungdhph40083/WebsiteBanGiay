@{
    ViewBag.Title = "Đặt lại mật khẩu";
}

<h2>Đặt lại mật khẩu</h2>

<form method="post" action="/Login/ResetPassword">
    <input type="hidden" name="Token" value="@ViewBag.Token" />
    <div>
        <label>Mật khẩu mới:</label>
        <input type="password" name="NewPassword" required />
    </div>
    <div>
        <label>Xác nhận mật khẩu:</label>
        <input type="password" name="ConfirmPassword" required />
    </div>
    <button type="submit">Đặt lại mật khẩu</button>
</form>

@if (TempData["FailureBanner"] != null)
{
    <p style="color:red;">@TempData["FailureBanner"]</p>
}
@if (TempData["SuccessBanner"] != null)
{
    <p style="color:green;">@TempData["SuccessBanner"]</p>
}
