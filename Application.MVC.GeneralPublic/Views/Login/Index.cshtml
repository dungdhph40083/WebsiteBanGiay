@model Application.Data.Models.User
<!-- Login Start -->
<div class="login">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-lg-6">
                <div class="login-form">
                    <div class="row">
                        @if (TempData["SuccessBanner"] != null)
                        {
                            <div class="col-md-12">
                                <div class="alert alert-success" role="alert">
                                    Tạo tài khoản thành công, hãy đăng nhập!
                                </div>
                            </div>
                        }
                        <div class="col-md-12">
                            <h1>Đăng nhập</h1>
                        </div>
                        <div class="col-md-12">
                            <label>Tên người dùng hoặc Email</label>
                            <input class="form-control" type="text" placeholder="Tên người dùng/Email">
                        </div>
                        <div class="col-md-12">
                            <label>Mật khẩu</label>
                            <input class="form-control" type="text" placeholder="Mật khẩu">
                        </div>
                        <div class="col-md-12">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="newaccount">
                                <label class="custom-control-label" for="newaccount">Giữ trạng thái đăng nhập</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <button class="btn">Đăng nhập</button>
                            <a asp-action="Register" class="btn">Đăng ký</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>