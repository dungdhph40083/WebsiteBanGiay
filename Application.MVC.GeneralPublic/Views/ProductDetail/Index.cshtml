@model List<Application.Data.Models.ProductDetail>;

<head>
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
</head>

<div class="product-detail">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                @foreach (var Detail in Model)
                {
                    <div class="product-detail-top">
                        <div class="row align-items-center">
                            <div class="col-md-5">
                                <div class="product-slider-single normal-slider">
                                    @if (Detail.Image != null)
                                    {
                                        <img src="@($@"https://localhost:7187/Images/{Detail.Image.ImageFileName}")" alt="Product Image">
                                    }

                                </div>
                                <div class="product-slider-single-nav normal-slider">
                                    @if (Detail.Image != null)
                                    {
                                        <div class="slider-nav-img"><img src="@($@"https://localhost:7187/Images/{Detail.Image.ImageFileName}")" alt="Product Image"></div>

                                    }
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="product-content">
                                    <div class="title"><h2>@Detail.Product?.Name</h2></div>
                                    <div class="ratting">
                                        @for (int i = 0; i < 5; i++)
                                        {
                                            <i class="fa fa-star"></i>
                                        }
                                    </div>
                                    <div class="price">
                                        <h4>Price:</h4>
                                        <p>
                                            @if (Detail.Sale != null)
                                            {
                                                @* discount price sẽ cho vào sau (trong commit mới) *@
                                                <span>$@Detail.Sale</span>
                                                <span>$@Detail.Product?.Price.GetValueOrDefault().ToString("#,##0")</span>
                                            }
                                            else
                                            {
                                                <span>$@Detail.Product?.Price</span>
                                            }
                                        </p>
                                    </div>
                                    <div class="quantity">
                                        <h4>Quantity:</h4>
                                        <div class="qty">
                                            <button class="btn-minus"><i class="fa fa-minus"></i></button>
                                            <input type="text" value="1">
                                            <button class="btn-plus"><i class="fa fa-plus"></i></button>
                                        </div>
                                    </div>
                                    <div class="p-size">
                                        <h4>Size:</h4>
                                        <div class="btn-group btn-group-sm">
                                            <button type="button" class="btn">@Detail.Size?.Name</button>
                                        </div>
                                    </div>
                                    <div class="p-color">
                                        <h4>Color:</h4>
                                        <div class="btn-group btn-group-sm">
                                            <button type="button" class="btn">@Detail.Color?.ColorName</button>
                                        </div>
                                    </div>
                                    @*  <div class="p-size">
                                <h4>Size:</h4>
                                <div class="btn-group btn-group-sm">
                                <select class="form-control" name="SizeId">
                                @foreach (var size in ViewBag.Size)
                                {
                                <option value="@size.Id" selected="@(size.Id == Detail.Size?.Name)">@size.Name</option>
                                }
                                </select>
                                </div>
                                </div>

                                <div class="p-color">
                                <h4>Color:</h4>
                                <div class="btn-group btn-group-sm">
                                <select class="form-control" name="ColorId">
                                @foreach (var color in ViewBag.Color)
