@model Application.Data.Models.Size

@{
    ViewData["Title"] = "Product size details";
}

<h1>Product size details</h1>

<div>
    <h4>Category</h4>
    <hr />
<dl class="row">
    <dt class="col-md-3">ID</dt>
    <dd class="col-md-9">
        <i class="font-monospace-cascadia">@Model.SizeID</i>
    </dd>
    <dt class="col-md-3">Size info</dt>
    <dd class="col-md-9">@Model.Name
    </dd>
    <dt class="col-md-3">Added on</dt>
    <dd class="col-md-9">
        @(Model.CreatedAt.ToLocalTime().ToString("d/M/yyyy H:mm:ss"))<br />
    </dd>
    <dt class="col-md-3">Last edited</dt>
    <dd class="col-md-9">
        @Model.UpdatedAt.ToLocalTime().ToString("d/M/yyyy H:mm:ss")<br />
    </dd>
</dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.SizeID }) |
    <a asp-action="Index">Back to List</a>
</div>


