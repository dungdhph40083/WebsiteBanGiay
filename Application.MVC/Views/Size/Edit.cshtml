@using Application.Data.Enums
@model Application.Data.DTOs.SizeDTO;

@{
    ViewData["Title"] = "Update product size";
}

<h1>Update product size</h1>

<form asp-action="Edit" method="post">
    <div class="row">
        <div class="col-md-6">
            <label asp-for="Name" class="form-label">Size name</label>
            <input type="text" asp-for="Name" class="form-control" aria-label="Input size name">
            <span asp-validation-for="Name">Required!</span>
        </div>
        <div class="col-md-6">
            <label asp-for="Status" class="form-label">Size</label>
            <select asp-for="Status" class="form-select" aria-label="Is it available?">
                <option selected value="@((int)VisibilityStatus.Available)">Available</option>
                <option value="@((int)VisibilityStatus.Locked)">Unavailable</option>
            </select>
        </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
<br />
<div class="alert alert-warning" role="alert">
    Only use this edit function to edit typos! (Like it matters anyway...)
</div>

