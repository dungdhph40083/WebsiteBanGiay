@using Application.Data.Enums
@model Application.Data.DTOs.SizeDTO;

@{
    ViewData["Title"] = "Add product size";
}

<h1>Add product size</h1>

<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-6">
            <label asp-for="Name" class="form-label">Size name</label>
            <input type="text" asp-for="Name" class="form-control" aria-label="Input size name">
            <span asp-validation-for="Name">Required!</span>
        </div>
        <div class="col-md-6">
            <label asp-for="Status" class="form-label">Is available</label>
            <select asp-for="Status" class="form-select" aria-label="Is it available?">
                <option selected value="@((int)VisibilityStatus.Available)">Available</option>
                <option value="@((int)VisibilityStatus.Locked)">Unavailable</option>
            </select>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>





