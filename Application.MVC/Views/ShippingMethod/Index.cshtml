@model IEnumerable<Application.Data.Models.ShippingMethod>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShippingMethodID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MethodName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippingFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstimatedDeliveryTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingMethodID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MethodName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingFee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstimatedDeliveryTime)
            </td>
            <td>
                    @Html.ActionLink("Update", "Update", new { id = item.ShippingMethodID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ShippingMethodID }) |
                    <a href="/ShippingMethod/delete?ID=@item.ShippingMethodID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
