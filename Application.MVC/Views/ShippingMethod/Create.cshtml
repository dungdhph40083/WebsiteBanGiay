@model Application.Data.Models.ShippingMethod

@{
    ViewData["Title"] = "Create ShippingMethod";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Create ShippingMethod</h1>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Shipping Method Information</h4>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- ShippingMethodID Field -->
                <div class="form-group">
                    <label asp-for="ShippingMethodID" class="control-label"></label>
                    <input asp-for="ShippingMethodID" class="form-control" />
                    <span asp-validation-for="ShippingMethodID" class="text-danger"></span>
                </div>

                <!-- MethodName Field -->
                <div class="form-group">
                    <label asp-for="MethodName" class="control-label"></label>
                    <input asp-for="MethodName" class="form-control" />
                    <span asp-validation-for="MethodName" class="text-danger"></span>
                </div>

                <!-- ShippingFee Field -->
                <div class="form-group">
                    <label asp-for="ShippingFee" class="control-label"></label>
                    <input asp-for="ShippingFee" class="form-control" />
                    <span asp-validation-for="ShippingFee" class="text-danger"></span>
                </div>

                <!-- EstimatedDeliveryTime Field -->
                <div class="form-group">
                    <label asp-for="EstimatedDeliveryTime" class="control-label"></label>
                    <input asp-for="EstimatedDeliveryTime" class="form-control" />
                    <span asp-validation-for="EstimatedDeliveryTime" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-success btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
