@model Application.Data.DTOs.ColorDTO

@{
    ViewData["Title"] = "Chi tiết màu sắc";
}

<div class="container mt-4">
    <h1 class="text-center text-primary">Chi tiết màu sắc</h1>
    <hr class="border-primary" />

    <div class="row justify-content-center">
        <!-- Thông tin màu sắc -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Thông tin màu sắc</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-5">Tên màu:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.ColorName)</dd>

                        <dt class="col-sm-5">Trạng thái:</dt>
                        <dd class="col-sm-7">
                            @if (Model.Status == 1)
                            {
                                <span class="badge bg-success">Kích hoạt</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Không kích hoạt</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Hành động -->
    <div class="mt-3 text-center">
        <a asp-action="Edit" asp-route-id="@Model.ColorID" class="btn btn-primary px-4 py-2 shadow-sm me-2">
            <i class="bi bi-pencil-square"></i> Chỉnh sửa
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 shadow-sm">
            <i class="bi bi-arrow-left"></i> Về danh sách
        </a>
    </div>
</div>

<style>
    /* Hiệu ứng cho thẻ card */
    .card {
        border-radius: 12px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 15px;
    }

    .card-title {
        font-size: 1.2rem;
        font-weight: bold;
        color: #007bff;
    }

    .row dt {
        font-weight: bold;
        color: #495057;
    }

    .row dd {
        color: #343a40;
        margin-bottom: 10px;
    }

    /* Thay đổi màu sắc nút */
    .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
        color: white;
        border-radius: 5px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #004bb5;
            border-color: #003b8c;
            transform: translateY(-2px);
        }

    .btn-outline-secondary {
        border-color: #6c757d;
        color: #6c757d;
        border-radius: 5px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .btn-outline-secondary:hover {
            background-color: #e9ecef;
            color: #0d6efd;
        }

    .container {
        max-width: 800px;
    }
</style>
