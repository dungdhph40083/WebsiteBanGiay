@model Application.Data.DTOs.ProductDetailDTO

@{
    ViewBag.Title = "Create New Product Detail";
    var products = ViewBag.Products as List<Application.Data.Models.Product>;
    var images = ViewBag.Images as List<Application.Data.Models.Image>;
}

<h2>Create New Product Detail</h2>

<form asp-action="Create" method="post">
    <!-- Chọn Product -->
    <div class="form-group">
        <label for="ProductID" class="control-label">Product Name</label>
        <select asp-for="ProductID" class="form-control"
                asp-items="@(products != null && products.Any() ? new SelectList(products, "ProductID", "Name") : new SelectList(Enumerable.Empty<SelectListItem>()))">
            <option value="">-- Select Product --</option>
        </select>
        <span asp-validation-for="ProductID" class="text-danger"></span>
    </div>

    <!-- Chọn Image -->
    <div class="form-group">
        <label for="ImageID" class="control-label">Image File Name</label>
        <select asp-for="ImageID" class="form-control"
                asp-items="@(images != null && images.Any() ? new SelectList(images, "ImageID", "ImageFileName") : new SelectList(Enumerable.Empty<SelectListItem>()))">
            <option value="">-- Select Image --</option>
        </select>
        <span asp-validation-for="ImageID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Material" class="control-label"></label>
        <input asp-for="Material" class="form-control" />
        <span asp-validation-for="Material" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" type="number" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" type="number" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Brand" class="control-label"></label>
        <input asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PlaceOfOrigin" class="control-label"></label>
        <input asp-for="PlaceOfOrigin" class="form-control" />
        <span asp-validation-for="PlaceOfOrigin" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WarrantyPeriod" class="control-label"></label>
        <input asp-for="WarrantyPeriod" class="form-control" type="date" />
        <span asp-validation-for="WarrantyPeriod" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Instructions" class="control-label"></label>
        <textarea asp-for="Instructions" class="form-control"></textarea>
        <span asp-validation-for="Instructions" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Features" class="control-label"></label>
        <textarea asp-for="Features" class="form-control"></textarea>
        <span asp-validation-for="Features" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
