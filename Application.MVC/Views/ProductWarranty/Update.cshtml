@model Application.Data.Models.ProductWarranty

@{
    ViewData["Title"] = "Update";
}

<h1 class="text-center">Update Product Warranty</h1>

<h4 class="text-center">Update the warranty details for the selected product</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Product Selection -->
            <div class="form-group">
                <label asp-for="ProductID" class="control-label"></label>
                <input asp-for="ProductID" class="form-control" readonly />
                <span asp-validation-for="ProductID" class="text-danger"></span>
            </div>

            <!-- Warranty Period -->
            <div class="form-group">
                <label asp-for="WarrantyPeriod" class="control-label"></label>
                <input asp-for="WarrantyPeriod" class="form-control" />
                <span asp-validation-for="WarrantyPeriod" class="text-danger"></span>
            </div>

            <!-- Warranty Conditions -->
            <div class="form-group">
                <label asp-for="WarrantyConditions" class="control-label"></label>
                <input asp-for="WarrantyConditions" class="form-control" />
                <span asp-validation-for="WarrantyConditions" class="text-danger"></span>
            </div>

            <!-- CreatedAt -->
            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label"></label>
                <input asp-for="CreatedAt" class="form-control" type="datetime-local" readonly />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>

            <!-- UpdatedAt -->
            <div class="form-group">
                <label asp-for="UpdatedAt" class="control-label"></label>
                <input asp-for="UpdatedAt" class="form-control" type="datetime-local" />
                <span asp-validation-for="UpdatedAt" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group text-center">
                <input type="submit" value="Save Changes" class="btn btn-success btn-lg" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
