@model Application.Data.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    var GetImages = ViewBag.Images as List<Application.Data.Models.Image>;
}

<div class="container">
    <h1 class="display-4 text-center mb-4">Chi tiết sản phẩm</h1>

    <div class="row">
        <!-- Product Info Section -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Thông tin sản phẩm</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductID)</dd>

                        <dt class="col-sm-4">Tên:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4">Mô tả:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-4">Giá:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>

                        <dt class="col-sm-4">Ngày tạo:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>

                        <dt class="col-sm-4">Ngày cập nhật:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.UpdatedAt)</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Optional Image Section -->
        <!-- Optional Image Section -->
        @if (GetImages != null || GetImages?.Count == 0)
        {
            <div class="col-md-4">
                <div id="ImageList" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        @for (int ImgIndx = 0; ImgIndx < GetImages.Count(); ImgIndx++)
                        {
                            <div class="carousel-item @(ImgIndx == 0 ? "active" : "")">
                                <img class="d-block w-100" src="https://localhost:7187/Images/@GetImages[ImgIndx].ImageFileName" alt="@GetImages[ImgIndx].ImageFileName" />
                            </div>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#ImageList" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Trái</span>
                    </a>
                    <a class="carousel-control-next" href="#ImageList" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Phải</span>
                    </a>
                </div>
            </div>
        }
    </div>

    <!-- Actions -->
    <div class="mt-4 text-center">
        <a class="btn btn-primary" href="@Url.Action("Edit", new { id = Model.ProductID })">Chỉnh sửa</a>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Quay lại danh sách</a>
    </div>
</div>

<style>
    .img-fluid {
        border-radius: 8px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #007bff;
    }

    .row dt {
        font-weight: bold;
        color: #495057;
    }

    .row dd {
        color: #343a40;
        margin-bottom: 10px;
    }

    .card {
        margin-bottom: 20px;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .btn {
        margin: 0 5px;
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #565e64;
        }
</style>
