@model Application.Data.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>


<div>
    <h4>Category</h4>
    <hr />
    <div class="row">
        <dl class="@(Model.Image != null ? "col-md-6" : "col-md-12")">
            <dt class="col-sm-2">
                ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductID)
            </dd>
            <dt class="col-sm-2">
                Tên
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                Mô tả
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                Giá
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UpdatedAt)
            </dd>
        </dl>
        @if (Model.Image != null)
        {
            <div class="col-md-6">
                <div class="row">
                    <img src="https://localhost:7187/Images/@Model.Image.ImageFileName" class="img-fluid col-xl" />
                </div>
                <div class="row pt-3">
                    @Model.Image!.ImageFileName
                </div>
            </div>
        }
    </div>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ProductID}) |
    <a asp-action="Index">Back to List</a>
</div>


