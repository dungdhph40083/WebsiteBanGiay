@model Application.Data.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h1 class="display-4 text-center mb-4">Chi tiết sản phẩm</h1>

<div class="container">
    <div class="row">
        <!-- Product Info Section -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">
                        Thông tin sản phẩm
                    </h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">ID:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductID)</dd>

                        <dt class="col-sm-3">Tên:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-3">Mô tả:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-3">Giá:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

                        <dt class="col-sm-3">Ngày tạo:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>

                        <dt class="col-sm-3">Ngày cập nhật:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdatedAt)</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Image Section -->
        @if (Model.Image != null)
        {
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Product Image</h5>
                        <img src="https://localhost:7187/Images/@Model.Image.ImageFileName" class="img-fluid mb-3" alt="Product Image" />
                        <div class="font-italic">@Model.Image!.ImageFileName</div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Actions -->
    <div class="mt-4 text-center">
        <a class="btn btn-primary" href="@Url.Action("Edit", new { id = Model.ProductID })">Edit</a>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Back to List</a>
    </div>
</div>
<style>
    .img-fluid {
        border-radius: 8px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>