@model Application.Data.Models.Return

@{
    ViewData["Title"] = "Chi Tiết";
}

<h1 class="text-center">Chi Tiết Trả Hàng</h1>

<div class="container mt-4">
    <h4 class="text-center mb-4">Thông Tin Trả Hàng</h4>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <!-- Mã Trả Hàng -->
                <dt class="col-sm-3 font-weight-bold">
                    Mã Trả Hàng
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ReturnID)
                </dd>

                <!-- Mã Đơn Hàng -->
                <dt class="col-sm-3 font-weight-bold">
                    Mã Đơn Hàng
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.OrderID)
                </dd>

                <!-- Lý Do -->
                <dt class="col-sm-3 font-weight-bold">
                    Lý Do
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Reason)
                </dd>

                <!-- Ngày Trả -->
                <dt class="col-sm-3 font-weight-bold">
                    Ngày Trả
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ReturnDate)
                </dd>

                <!-- Trạng Thái -->
                <dt class="col-sm-3 font-weight-bold">
                    Trạng Thái
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Status)
                </dd>
            </dl>
        </div>
    </div>

    <!-- Nút Cập Nhật và Quay Lại -->
    <div class="text-center mt-4">
        @Html.ActionLink("Cập Nhật", "Update", new { id = Model.ReturnID }, new { @class = "btn btn-primary btn-lg" }) |
        <a asp-action="Index" class="btn btn-secondary btn-lg">Quay Lại Danh Sách</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
