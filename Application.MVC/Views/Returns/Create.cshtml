@model Application.Data.Models.Return

@{
    ViewData["Title"] = "Tạo Mới";
    var orders = ViewBag.Orders as List<Application.Data.Models.Order>;
}

<h1 class="text-center">Tạo Trả Hàng</h1>

<div class="container mt-4">
    <h4 class="text-center mb-4">Tạo Mục Trả Hàng Mới</h4>

    <div class="card">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <!-- Mã Đơn Hàng -->
                <div class="form-group">
                    <label asp-for="OrderID" class="control-label font-weight-bold">Mã Đơn Hàng</label>
                    <select asp-for="OrderID" class="form-control"
                            asp-items="@(orders != null && orders.Any() ? new SelectList(orders, "OrderID", "OrderID") : new SelectList(Enumerable.Empty<SelectListItem>()))">
                        <option value="">-- Chọn Mã Đơn Hàng --</option>
                    </select>
                    <span asp-validation-for="OrderID" class="text-danger"></span>
                </div>

                <!-- Lý Do -->
                <div class="form-group">
                    <label asp-for="Reason" class="control-label font-weight-bold">Lý Do</label>
                    <input asp-for="Reason" class="form-control" />
                    <span asp-validation-for="Reason" class="text-danger"></span>
                </div>

                <!-- Ngày Trả -->
                <div class="form-group">
                    <label asp-for="ReturnDate" class="control-label font-weight-bold">Ngày Trả</label>
                    <input asp-for="ReturnDate" class="form-control" />
                    <span asp-validation-for="ReturnDate" class="text-danger"></span>
                </div>

                <!-- Số Tiền Hoàn Trả -->
                <div class="form-group">
                    <label asp-for="RefundAmount" class="control-label font-weight-bold">Số Tiền Hoàn Trả</label>
                    <input asp-for="RefundAmount" class="form-control" />
                    <span asp-validation-for="RefundAmount" class="text-danger"></span>
                </div>

                <!-- Trạng Thái -->
                <div class="form-group">
                    <label asp-for="Status" class="control-label font-weight-bold">Trạng Thái</label>
                    <input asp-for="Status" class="form-control" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <!-- Nút Gửi -->
                <div class="form-group">
                    <input type="submit" value="Tạo Mới" class="btn btn-primary btn-lg btn-block" />
                </div>
            </form>
        </div>
    </div>

    <!-- Nút Quay Lại Danh Sách -->
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary btn-lg">Quay Lại Danh Sách</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
